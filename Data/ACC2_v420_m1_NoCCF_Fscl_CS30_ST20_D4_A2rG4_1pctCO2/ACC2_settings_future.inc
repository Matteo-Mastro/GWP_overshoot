*** Concentrations -----------------------------------------------------------------------------------------------------

CONO3TRPQ(T) $(Ord(T) GT 1)   .. CON(T,'O3TRP') =E=
                                 CON('2000','O3TRP')+5.0*(LOG(CON(T,'CH4'))-
                                 LOG(CON('2000','CH4')))+0.125*(ANT(T,'NOx')-ANT('2000','NOx'))
                                 +0.0011*(ANT(T,'CO')-ANT('2000','CO'))+0.0033*(ANT(T,'VOC')-ANT('2000','VOC'));

CONSF6Q(T) $(Ord(T) GT 1)     .. (CON(T,'SF6')-CON(T-1,'SF6'))/DELTAT =E= 0.5*
                                 ((1/CNVSF6*(ANT(T,'SF6'))-(1/TAUSF6*CON(T,'SF6')))+
                                 (1/CNVSF6*(ANT(T-1,'SF6'))-(1/TAUSF6*CON(T-1,'SF6'))));

CONHAL1Q(T,HAL) $((Ord(T) GT 1) AND (NHYD(HAL) EQ 0)) .. (CON(T,HAL)-CON(T-1,HAL))/DELTAT =E= 0.5*
                                 ((1/CNV(HAL)*(ANT(T,HAL)+ NAT(HAL))-(1/TAUATM(HAL)*CON(T,HAL)))+
                                 (1/CNV(HAL)*(ANT(T-1,HAL)+ NAT(HAL))-(1/TAUATM(HAL)*CON(T-1,HAL))));
* For halocarbons with their concentrations not controlled by OH

CONHAL2Q(T,HAL) $((Ord(T) GT 1) AND (NHYD(HAL) GT 0)) .. (CON(T,HAL)-CON(T-1,HAL))/DELTAT =E= 0.5*
                                 ((1/CNV(HAL)*(ANT(T,HAL)+ NAT(HAL))-(1/TAUATM(HAL)*CON(T,'rOH')*CON(T,HAL)))+
                                 (1/CNV(HAL)*(ANT(T-1,HAL)+ NAT(HAL))-(1/TAUATM(HAL)*CON(T-1,'rOH')*CON(T-1,HAL))));
* For halocarbons with their concentrations controlled by OH

CONEESCQ(T)                   .. CON(T,'EESC') =E=
                                 SUM(ODS, AFRCFC11*(NCLO(ODS)+ALPEESC*NBRO(ODS))*RFRF(ODS)*CON(T-3,ODS))$(Ord(T) GT 3)
                                 +SUM(ODS, AFRCFC11*(NCLO(ODS)+ALPEESC*NBRO(ODS))*RFRF(ODS)*CON1997(ODS))$(Ord(T) EQ 1)
                                 +SUM(ODS, AFRCFC11*(NCLO(ODS)+ALPEESC*NBRO(ODS))*RFRF(ODS)*CON1998(ODS))$(Ord(T) EQ 2)
                                 +SUM(ODS, AFRCFC11*(NCLO(ODS)+ALPEESC*NBRO(ODS))*RFRF(ODS)*CON1999(ODS))$(Ord(T) EQ 3);


*** Radiative forcings -------------------------------------------------------------------------------------------------

*RADHALQ(T,HALR)  .. RAD(T,HALR) =E= RHORAD(HALR)*CON(T,HALR);
* CH3Cl and CH3Br are not included in radiative forcing calculation.
RADHALQ(T,HALR)  .. RAD(T,HALR) =E= 0;

*RADSF6Q(T)       .. RAD(T,'SF6') =E= RHOSF6*CON(T,'SF6');
RADSF6Q(T)       .. RAD(T,'SF6') =E= 0;

RADO3TRPQ(T)     .. RAD(T,'O3TRP') =E= RHOO3TRP*(CON(T,'O3TRP')-CONO3TRPPRE);
*RADO3TRPQ(T)     .. RAD(T,'O3TRP') =E= 0;

*RADO3STRQ(T)     .. RAD(T,'O3STR') =E= RHOO3STR*(CON(T,'EESC')-CONEESC1970);
RADO3STRQ(T)     .. RAD(T,'O3STR') =E= 0;

RADSOLQ(T)       .. RADSOL(T) =E= [[RADSOL2000-(RADSOL2000-RADSOL20AVE)/30*(Ord(T)-1)]$(Ord(T) < 32)
                                  +[RADSOL20AVE]$(Ord(T) >= 32)]$(SOLSWCH > 0.5)
                                  +[0]$(SOLSWCH < 0.5);

RADMISQ(T)       .. RADMIS(T) =E= 0;

RADAERQ(T)       .. RADAER(T) =E= RAD(T,'SO2')+RAD(T,'CRBAER')+RAD(T,'AERIND');

RADANTQ(T)       .. RADANT(T) =E=
                    RAD(T,'CO2')+RAD(T,'CH4')+RAD(T,'N2O')+RADHAL(T)+RAD(T,'SF6')+RAD(T,'H2OSTR')+RAD(T,'AERIND')+
                    (RAD(T,'O3TRP')+RAD(T,'O3STR'))+
                    RAD(T,'SO2')+
                    RAD(T,'CRBAER');

RADANTLQ(T)      .. RADANTL(T) =E=
                    RAD(T,'CO2')+RAD(T,'CH4')+RAD(T,'N2O')+RADHAL(T)+RAD(T,'SF6')+RAD(T,'H2OSTR')+RAD(T,'AERIND')+
                    ROZO/(1-FLA+FLA*ROZO)*(RAD(T,'O3TRP')+RAD(T,'O3STR'))+
                    RSUL/(1-FLA+FLA*RSUL)*RAD(T,'SO2')+
                    RFF/(1-FLA+FLA*RFF)*RAD(T,'CRBAER');

RADANTOQ(T)      .. RADANTO(T) =E=
                    RAD(T,'CO2')+RAD(T,'CH4')+RAD(T,'N2O')+RADHAL(T)+RAD(T,'SF6')+RAD(T,'H2OSTR')+RAD(T,'AERIND')+
                    1/(1-FLA+FLA*ROZO)*(RAD(T,'O3TRP')+RAD(T,'O3STR'))+
                    1/(1-FLA+FLA*RSUL)*RAD(T,'SO2')+
                    1/(1-FLA+FLA*RFF)*RAD(T,'CRBAER');

RADTTLQ(T)       .. RADTTL(T) =E=
                    RAD(T,'CO2')+RAD(T,'CH4')+RAD(T,'N2O')+RADHAL(T)+RAD(T,'SF6')+RAD(T,'O3TRP')+RAD(T,'O3STR')
                    +RAD(T,'H2OSTR')+RAD(T,'SO2')+RAD(T,'CRBAER')+RAD(T,'AERIND')+RADVOL(T)+RADSOL(T)+RADMIS(T);
